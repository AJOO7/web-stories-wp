          <amp-img id="template_8" src="/img/template_8.jpg" width="144px" height="257px" layout="responsive" ></amp-img>
        </div>
      </div>
    </div>
  </section>

  <section id="final_thoughts">

    <amp-position-observer on="scroll:finalThoughtsAnimation.seekTo(percent=event.percent)" intersection-ratios="0" layout="nodisplay" ></amp-position-observer>

    <amp-animation id="finalThoughtsAnimation" layout="nodisplay">

      <script type="application/json">
        {
            "duration": "1",
            "fill": "both",
            "animations": [
              {
                "selector": "#tip_card_bg",
                "keyframes": [
                    {"transform": "rotate(0)"},
                    {"transform": "rotate(0)", "offset": "0.4"},
                    {"transform": "rotate(10deg)", "offset": "0.5"},
                    {"transform": "rotate(10deg)", "offset": "1"}
                ]
              }
            ]
          }
      </script>
    </amp-animation>

    <div>
      <p>{{$('BEFORE YOU START')}}</p>
      <h1>{{$('Tips to make the most of Web Stories')}}</h1>
      <p>{{$('Welcome! Starting on a new tool can be daunting so we created a story with some tips to help you get started. It’s also an example of a Web Story! Enjoy the editor.')}}</p>
      <a href="/stories/tips-web-stories-editor/" class="fake_button">{{$("View the Story")}}</a>
    </div>
    <div id="tip_card_container">
      <a href="/stories/tips-web-stories-editor/">
        <amp-img id="tip_card" src="/img/tips_card.jpg" alt='Screenshots of a screen of edited photos, with the caption "Tips to make the most of Web Stories"' layout="intrinsic" width="350" height="620"></amp-img>
        <amp-img id="tip_card_bg" src="/img/tip_card_bg.svg" alt='' layout="intrinsic" width="350" height="620"></amp-img>
      </a>
    </div>
  </section>

</main>
